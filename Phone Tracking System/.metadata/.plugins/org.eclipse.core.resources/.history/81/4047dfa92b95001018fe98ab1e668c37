package com.tracking.repositoryInterfaces;

import java.time.LocalDateTime;
import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.tracking.entity.Device;

@Repository
public interface DeviceRepository extends JpaRepository<Device, Long> {
    Optional<Device> findByDeviceId(String deviceId);
    List<Device> findByUserId(Long userId);
    List<Device> findByIsActiveTrue();
    List<Device> findByLastSeenBefore(LocalDateTime dateTime);
    List<Device> findByUserIdAndIsActiveTrue(Long userId);
}